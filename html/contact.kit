<!DOCTYPE html>
<html lang="pl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forest</title>
    <script src="https://kit.fontawesome.com/04e6bcb4e2.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;300;400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="./dist/css/style.min.css">
</head>

<body>


    <!-- @include 'nav.kit' -->

    <section class="contact">

        <div class="wrapper">

            <div class="box">






                <div class="container">
                    <div class="box__left">
                        <div class="box__left--shadow">
                            <h3>Skontaktuj sie z nami</h3>

                            <div class="box__left--text">
                                <div class="box__left--address">
                                    <span><i class="fa-solid fa-location-dot"></i> Adres</span>
                                    <p>Jasnogórska 2, 31-358 Kraków</p>
                                </div>
                                <div class="box__left--phone">
                                    <span><i class="fa-solid fa-phone"></i> Telefon</span>
                                    <p>782 698 557</p>
                                </div>
                                <div class="box__left--support">

                                    <span><i class="fa-solid fa-envelope"></i> E-mail</span>
                                    <p>forest@forest.com</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="box__right">
                        <iframe
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2559.898050088967!2d19.890269276890596!3d50.08819561338041!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47165a326d015c3b%3A0x47a12cd367a1f34e!2sRestauracja%20McDonald&#39;s!5e0!3m2!1spl!2spl!4v1696433949160!5m2!1spl!2spl"
                            loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>




                <div class="form">
                    <h3>Wyslij nam wiadomosc</h3>

                    <form action="
                    ">
                        <div class="form__text text" onchange="checkName(imie)">
                            <label for="name">Imie:</label>
                            <input id="name" type="text">
                            <p class="error">Podaj swoje imie!</p>
                        </div>
                        <div class="form__text email" onchange="validateEmail(email)">
                            <label for="email">Adres email: </label>
                            <input id="email" type="email">
                            <p class="error">Podaj swoj email</p>
                        </div>
                        <div class="form__text message" onchange="checkMessage(message)">
                            <label for="message">Wpisz tresc wiadomosci: </label>
                            <textarea name="" id="message" cols="30" rows="10"></textarea>
                            <p class="error">brak wiadomosci</p>

                        </div>
                    </form>
                    <button class="form__btn">Wyslij wiadomosc</button>

                    <div class="popup ">
                        <div class="popup__box">
                            <h4>Wiadomosc zostala wyslana :) </h4>
                        </div>
                    </div>

                </div>
            </div>



    </section>




    <!-- @include 'footer.kit' -->


    <script src="./dist/js/form_walidator.min.js"></script>
    <script src="./dist/js/script.min.js"></script>
</body>

</html>